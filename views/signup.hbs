<p class="error-message">{{err}}</p>
<main id="signup-page">
  <h2>WELCOME TO APPLEJACKS! <br></h2>
  <h2 class="log-in-title">Sign Up</h2>

  <form action="/signup" method="post">
    <label>
      <span class="sr-only">User email</span>
      <input type="email" class="user-input" placeholder="Email..." name="email" aria-required="true" required/>
    </label>


    <label>
      <span class="sr-only">User password</span>
      <input type="password" class="user-input" placeholder="Password..." name="pwd" aria-required="true" required/>
    </label>

    <label>
      <span class="sr-only">User password confirm</span>
      <input type="password" class="user-input" placeholder="Confirm password..." name="pwdConfirm" aria-required="true" required/>
    </label>

    <input type="submit" class="login-submit-btn" />
  </form>

  <h2 class="sign-up-title">Log In</h2>
  <form action="/login" method="post">
    <label>
      <span class="sr-only">User email</span>
      <input type="email" class="user-input" placeholder="Email..." name="email" aria-required="true" required autofocus/>
    </label>


    <label>
      <span class="sr-only">User password</span>
      <input type="password" class="user-input" placeholder="Password..." name="pwd" aria-required="true" required/>
    </label>

    <input type="submit" class="login-submit-btn" />
  </form>
</main>
