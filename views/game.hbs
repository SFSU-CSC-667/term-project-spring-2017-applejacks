
<main id="game-page">

  {{!-- Because card is a property of the root object,
        there is no need to use this.card --}}
  {{!-- <div>
    {{> card card }}
  </div> --}}

   {{!-- {{mock.card.value}} --}}
  <div class="dealer-hand">
    {{#each dealerHand}}
      <span style="float:left;box-sizing: content-box;">{{> card card=this}}</span>
    {{/each}}
  </div>

  <div class="place-bet">
    <div class="your-turn">It's your turn</div>
    <label>
      <span>Place your bet</span>
      <input type="text" value="50" data-bet/>
    </label>
    <span class="bust">Bust</span>
  </div>


  <div class="user-section">
    <div class="user-section--hand">
      {{#each userHand}}
        <span style="float:left;height:100%;margin-right:8px;">{{> card card=this class="user-section--card"}}</span>
      {{/each}}
    </div>

    <div class="user-section--actions">
      <button class="user-secction--action__btn" type="button" data-action-place-bet >Place bet</button>
      <button class="user-secction--action__btn" type="button" data-action-hit disabled>Hit</button>
      <button class="user-secction--action__btn" type="button" data-action-stay disabled>Stay</button>
      <button class="user-secction--action__btn hidden" type="button" data-action-play-again>Let's play again!</button>
    </div>
  </div>
</main>

<aside id="chat-section" class="chat-section">
  {{> chat_v2}}
</aside>

<div id="user-info">
    {{#each user}}
      <span class="{{@key}}">{{.}}</span>
    {{/each}}
</div>